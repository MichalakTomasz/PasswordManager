<RibbonWindow x:Class="PasswordManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="Password Manager" Height="350" Width="692" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Ribbon Grid.Row="0">
            <RibbonTab Header="Generator">
                <RibbonGroup>
                    <RibbonTextBox TextBoxWidth="400" Label="Hasło" Text="{Binding KeyValue}"/>
                    <RibbonTextBox TextBoxWidth="30" Label="Długość klucza" Text="{Binding KeyLength}"/>
                    <RibbonTextBox TextBoxWidth="100" Label="Nazwa" Text="{Binding KeyName}"/>
                    <RibbonCheckBox Label="Duże litery" IsChecked="{Binding CapitalLetters}"/>
                    <RibbonCheckBox Label="Małe litery" IsChecked="{Binding SmallLetters}"/>
                    <RibbonCheckBox Label="Cyfry" IsChecked="{Binding Digits}"/>
                    <RibbonCheckBox Label="Znaki"  IsChecked="{Binding Chars}"/>
                    <RibbonButton Label="Generuj" Command="{Binding GenerateKeyCommand}"/>
                    <RibbonButton Label="Kopiuj" Command="{Binding CopyCommand}" />
                    <RibbonButton Label="Zapisz"/>
                </RibbonGroup>
            </RibbonTab>
        </Ribbon>
        <DataGrid 
            Grid.Row="1"
            ItemsSource="{Binding Passwords}">
            
        </DataGrid>
    </Grid>
</RibbonWindow>
