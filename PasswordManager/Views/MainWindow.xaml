<RibbonWindow x:Class="PasswordManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="Password Manager" Height="350" Width="525" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Ribbon Grid.Row="0">
            <RibbonTab Header="Generator">
                <RibbonGroup>
                    <RibbonTextBox TextBoxWidth="200" Label="Klucz" Text="{Binding KeyValue}"/>
                    <RibbonTextBox TextBoxWidth="30" Label="Długość klucza" Text="{Binding KeyLength}"/>
                    <RibbonCheckBox Label="Duże litery" IsChecked="{Binding CapitalLetters}"/>
                    <RibbonCheckBox Label="Małe litery" IsChecked="{Binding SmallLetters}"/>
                    <RibbonCheckBox Label="Cyfry" IsChecked="{Binding Digits}"/>
                    <RibbonCheckBox Label="Znaki"  IsChecked="{Binding Chars}"/>
                    <RibbonButton Label="Generuj" Command="{Binding GenerateKeyCommand}"/>
                    <RibbonButton Label="Kopiuj" />
                    <RibbonButton Label="Zapisz"/>
                </RibbonGroup>
                
            </RibbonTab>
        </Ribbon>
        <ContentControl Grid.Row="1" prism:RegionManager.RegionName="ContentRegion" />
    </Grid>
</RibbonWindow>
